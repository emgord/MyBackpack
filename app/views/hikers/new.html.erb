<div class="container">
  <div class="background"></div>
  <%= form_for @hiker do |f| %>
    <fieldset>
      <legend>Hiker Profile:</legend>
      <%=f.label :name %>
      <%=f.text_field :name %>
      <br><br>
      <%= f.label :location %>
      <%= f.text_field :location %>
      <br><br>
      <%= f.label :bio %> <br>
      <%= f.text_area :bio, cols: 40, rows: 15 %>
      <br><br>
    </fieldset>
    <br>
    <%= f.submit("Add Hiker!") %>
  <% end %>
  <%= link_to "Back to all hikers", hikers_path, class: "btn btn-default" %>
</div>
